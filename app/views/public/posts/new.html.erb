<div class="nav justify-content-center bg-white border-bottom" >
  <div class="nav-item" style = "padding-top: 5px;">
    <h5 class="nav-link disabled">新規投稿</h5>
  </div>
</div>

<div class="container">
  <div class="row d-flex justify-content-center">
    <%= form_with model: @post, url: posts_path, method: :post do |f| %>
      <div class="form-group">
        <label class="text-secondary">投稿画像</label><br>
        <%= f.file_field :post_image %>
      </div>
      <div id="new-image"></div>

      <div class="form-group">
        <label class="text-secondary">タイトル</label><br>
        <%= f.text_field :title, size: "56" %>
      </div>

      <div class="form-group">
        <label class="text-secondary">魚種</label><br>
        <%= f.text_field :type, size: "56" %>
      </div>

      <div class="form-group">
        <label class="text-secondary">場所</label><br>
        <%= f.text_field :point, size: "56" %>
      </div>

      <div class="form-group">
        <label class="text-secondary">サイズ</label><br>
        <%= f.text_field :size, size: "56" %>
      </div>

      <div class="form-group">
        <label class="text-secondary">投稿文</label><br>
        <%= f.text_area :content, size: "59x10" %>
      </div>

      <div class="row d-flex justify-content-center">
        <div>
          <%= f.submit "投稿する",  class:"btn btn-outline-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>