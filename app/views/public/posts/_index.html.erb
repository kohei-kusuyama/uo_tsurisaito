<div class="container new-item">
  <div class="row">
    <% posts.each do |post| %>
      <div class="col-md-3 col-sm-6">
        <div class="card w-100 bg-transparent border-0">
          <div class="card-body">
            <%= link_to post_path(post) do %>
              <div class="post-image text-center">
                <%= image_tag post.get_post_image, size: "200x200", class: "img-fluid", style: "max-width: 100%; height: auto;" %></br>
                <div class="card-text">
                  <%= link_to post.title, post_path(post), class:"link" %><br>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>