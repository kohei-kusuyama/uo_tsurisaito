<div class="container new-item">
  <div class="row">
    <% posts.each do |post| %>
      <div class="col-md-3 col-sm-6">
        <div class="card w-100 bg-transparent border-0">
          <div class="card-body">
            <%= link_to post_path(post) do %>
              <div class="post-image">
                <%= image_tag post.get_post_image, size: "250x100", class: "img-fluid", style: "max-width: 100%; height: 200px;" %></br>
              </div>
            <% end %>
            <div class ="bg-white mt-2">
              <div class="card-title text-center">
                <%= link_to post.title, post_path(post), class:"link" %><br>
              </div>
              <div class="card-text text-truncate">
                <%= post.content %><br>
              </div>
            </div>
            <!--いいねとコメントの数-->
            <div class ="d-flex justify-content-around bg-light mt-2">
              <!--いいねの数-->
              <div class = "col-4 text-right p-0">
                <div id = "public_favorites_btn_<%= post.id %>">
                  <%= render 'public/favorites/btn', post: post %>
                </div>
              </div>
              <!--コメントの数-->
              <div class = "col-4 text-left p-0">
                  <i class="fa-regular fa-comment-dots"></i>
                  <%= post.post_comments.count %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>