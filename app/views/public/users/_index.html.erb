<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody class = "text-white">
    <% users.each do |user| %>
      <tr>
        <td><%= link_to user_path(user) do %>
          <%= image_tag user.get_profile_image, size: '50x50', class: "rounded-circle" %>
          <% end %>
          </td>
        <td><%= user.nickname %></td>
        <td>フォロー数: <%= user.followings.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>
      <% if current_user.following?(user) %>
        <td><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:"btn btn-outline-light" %></td>
      <% else %>
        <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-outline-light" %></td>
      <% end %>

      </tr>
    <% end %>
  </tbody>
</table>