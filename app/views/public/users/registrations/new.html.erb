<%= render "public/shared/error_messages", resource: resource %>
<div class="container">
  <div class="row d-flex justify-content-center">
    <%= form_with(model: User.new, url: user_registration_path) do |f| %>
      <%#= render "public/shared/error_messages", resource: resource %>

      <!--<div class="form-group">-->
      <!--  <label class="text-secondary">プロフィール画像</label><br>-->
      <!--  <%#= f.file_field :profile_image %>-->
      <!--</div>-->

      <div class="form-group">
        <label class="text-white">名前（姓）</label><br>
        <%= f.text_field :last_name, class: "form-control" %><br>
        <label class="text-white">名前（名）</label><br>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <label class="text-white">ニックネーム</label><br>
        <%= f.text_field :nickname, class: "form-control" %>
      </div>

      <div class="form-group">
        <label class="text-white">住所</label><br>
        <%= f.select :delivery_area, User.delivery_areas.keys, {}, {class: 'hoge , form-control'} %>
      </div>

      <div class="form-group">
        <label class="text-white">メールアドレス</label><br>
        <%= f.email_field :email, placeholder: "sample@example.com", class: "form-control" %>
      </div>

      <div class="form-group">
        <label class="text-white">パスワード（6文字以上）</label><br>
          <!--<%# if @minimum_password_length %>-->
          <!--  (<%#= @minimum_password_length %>文字以上)-->
          <!--<%# end %>-->
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <label class="text-white">パスワード（確認用）</label><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class = "d-flex justify-content-center">
      <%= f.submit "新規登録", class:"btn btn-outline-success" %>
      </div>

    <% end %>
  </div>

  <div class="row d-flex justify-content-center my-4 text-white">
    <h6 class="">既に登録済みの方は<%= render "public/shared/links" %></h6>
  </div>
</div>