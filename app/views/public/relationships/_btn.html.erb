<% if user_signed_in? %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: options[:class].presence || "btn btn-outline-light" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: options[:class].presence || "btn btn-light" %>
  <% end %>
<% else %>
  <%= link_to "フォローするにはログインが必要です", new_user_session_path, class: 'btn btn-warning' %>
<% end %>