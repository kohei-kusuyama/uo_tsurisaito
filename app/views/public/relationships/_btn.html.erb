<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", relationships_path(user.id), method: :delete, class: options[:class].presence || "btn btn-primary" %>
  <% else %>
    <%= link_to "フォローする", relationships_path(user.id), method: :post, class: options[:class].presence || "btn btn-outline-primary" %>
  <% end %>
<% end %>