<div class = "container">
  <div class="row d-flex justify-content-center">
    <%= form_with(model: Admin.new, url: new_admin_session_path) do |f| %>
     <div class="form-group">
        <label class="text-white">メールアドレス</label><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="text-white">パスワード</label><br>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
      <%= f.submit "ログイン",class:"btn btn-primary my-3" %>
    <% end %>
  </div>
</div>